@model WebsiteSellingSuitcases.Models.tKhachHang
<div class="modal fade" id="modalDetailsCustomer">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chi tiết khách hàng</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal_body">
                <p><strong style="color:blue"> - Mã khách hàng: </strong>@Model.MaKH</p>
                <p><strong style="color:blue"> - Tên khách hàng: </strong>@Model.TenKH</p>
                <p><strong style="color:blue"> - Giới tính: </strong> @(Model.GioiTinh==true?"Nam":"Nữ")</p>
                <p><strong style="color:blue"> - Địa chỉ: </strong>@Model.DiaChi - @Model.Huyen - @Model.ThanhPho</p>
                <p><strong style="color:blue"> - Số điện thoại: </strong>@Model.DienThoai</p>
                <p><strong style="color:blue"> - Email: </strong>@Model.Email</p>
            </div>
        </div>
    </div>
</div>

