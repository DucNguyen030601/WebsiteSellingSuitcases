@model List<WebsiteSellingSuitcases.Models.GioHang>
<div class="modal fade" id="modalDetailsBill">
    <div class="modal-dialog"style="width:max-content">
        <div class="modal-content" >
            <div class="modal-header">
                <h4 class="modal-title">Chi tiết đơn hàng</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal_body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th width="150px">Ảnh</th>
                                    <th>Số Lượng</th>
                                    <th>Giá Bán</th>
                                    <th>Chiết Khấu</th>
                                    <th>Thành Tiền</th>
                                </tr>
                            </thead>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.sTenSP</td>
                                        <td><a><img src="~/Images/@item.sHinhAnh" alt="" width="50%"></a></td>
                                        <td style="color:deeppink">@item.iSoLuong</td>
                                        <td><span class="success" style="color:blue">@String.Format("{0:0,0 VNĐ}", item.sGiaBan)</span></td>
                                        <td style="color:orangered">@(item.sChietKhau * 100)%</td>
                                        <td style="color:red">@String.Format("{0:0,0 VNĐ}", item.ThanhTien)</td>
                                    </tr>

                                }
                            }
                            <tbody>
                            </tbody>
                        </table>
                </div>
        </div>
    </div>
</div>
