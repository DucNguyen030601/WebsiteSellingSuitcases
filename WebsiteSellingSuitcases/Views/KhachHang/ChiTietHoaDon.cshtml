@model List<WebsiteSellingSuitcases.Models.GioHang>
<div class="modal fade" id="modalDetailsBill">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal_body">
                <div class="container">
                    <div class="coron_table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th width="150px">Ảnh</th>
                                    <th>Số Lượng</th>
                                    <th>Giá Bán</th>
                                    <th>Chiết Khấu</th>
                                    <th>Thành Tiền</th>
                                </tr>
                            </thead>
                            @{
                                foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.sTenSP</td>
                                    <td><a><img src="~/Images/@item.sHinhAnh" alt="" width="50%"></a></td>
                                    <td style="color:deeppink">@item.iSoLuong</td>
                                    <td><span class="success" style="color:blue">@String.Format("{0:0,0 VNĐ}", item.sGiaBan)</span></td>
                                    <td style="color:orangered">@(item.sChietKhau * 100)%</td>
                                    <td style="color:red">@String.Format("{0:0,0 VNĐ}", item.ThanhTien)</td>
                                </tr>
                                    
                                }
                             }
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>