
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSP.cshtml";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb_content">
                <ul>
                    <li><a href="/Home">Trang chủ</a></li>
                    <li><i class="fa fa-angle-right"></i></li>
                    <li title="navLienHe">Liên hệ</li>
                </ul>

            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--contact area start-->
<div class="contact_area">
    <div class="row">
        <div class="col-lg-6 col-md-12">
            @{ if (@TempData["GuiThanhCong"] != null)
                {

                    <!-- Success Alert -->
                    <div class="alert alert-success alert-dismissible fade show">
                        <strong>@TempData["GuiThanhCong"]</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                if (@TempData["GuiLoi"] != null)
                {
                    <!-- Error Alert -->
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>@TempData["GuiLoi"]</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    }
                }
                <div class="contact_message">
                    <h3>Hãy Cho Chúng Tôi Biết Dự Án Của Bạn</h3>
                    @using (Html.BeginForm("ThemLienHe", "LienHe", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <input name="hoten" placeholder="Họ tên *" type="text">
                            </div>
                            <div class="col-lg-6">
                                <input name="email" placeholder="Email *" type="email">
                            </div>
                            <div class="col-lg-6">
                                <input name="tieude" placeholder="Tiêu đề *" type="text">
                            </div>
                            <div class="col-lg-6">
                                <input name="dienthoai" placeholder="Điện thoại *" type="text">
                            </div>

                            <div class="col-12">
                                <div class="contact_textarea">
                                    <textarea placeholder="Tin nhắn *" name="tinnhan" class="form-control2"></textarea>
                                </div>
                                <button type="submit"> Gửi tin nhắn </button>
                            </div>
                            <div class="col-12">
                                <p class="form-messege"></p>
                            </div>
                        </div>
                    }
                </div>
            </div>

        <div class="col-lg-6 col-md-12">
            <div class="contact_message contact_info">
                <h3>Liên Hệ Chúng Tôi</h3>
                <p>Sự rõ ràng cũng là một quá trình năng động dẫn đến sự thay đổi trong cách sử dụng của người đọc. Thật là tuyệt vời khi ghi nhận cách thức mà bức thư Gothic, mà chúng tôi nghĩ rằng bây giờ thích các hình thức văn học nhân loại ít rõ ràng hơn.</p>
                <ul>
                    <li><i class="fa fa-fax"></i>  Địa chỉ: Số 40 Baria Sreet 133/2 Thành phố NewYork</li>
                    <li><i class="fa fa-phone"></i> <a href="#">Infor@roadthemes.com</a></li>
                    <li><i class="fa fa-envelope-o"></i> 0(1234) 567 890</li>
                </ul>
                <h3><strong>Giờ Làm Việc</strong></h3>
                <p><strong>Thứ Hai - Thứ Bảy</strong>:  08AM – 22PM</p>
            </div>
        </div>
    </div>
</div>

<!--contact area end-->
<!--contact map start-->
<div class="contact_map">
    <div class="row">
        <div class="col-12">
            <iframe src="https://www.google.com/maps/embed?pb" width="500" height="450" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
</div>
<!--contact map end-->
